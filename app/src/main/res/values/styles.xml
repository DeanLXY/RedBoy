<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="@android:windowAnimationStyle">@style/activty_fade_in_fade_out</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="tab_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">13dp</item>
        <item name="android:background">@drawable/tab_menu_bg_selector</item>
        <item name="android:drawablePadding">-13dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/tab_titlecolor_selector</item>
    </style>

    <style name="activty_fade_in_fade_out">
        <item name="@android:activityOpenEnterAnimation">@anim/push_left_in</item>
        <item name="@android:activityOpenExitAnimation">@anim/push_left_out</item>
        <item name="@android:activityCloseEnterAnimation">@anim/push_right_in</item>
        <item name="@android:activityCloseExitAnimation">@anim/push_right_out</item>
    </style>

</resources>